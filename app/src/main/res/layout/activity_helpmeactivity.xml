<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.abhilashreddy.homelessness.Helpmeactivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        tools:context="com.example.abhilashreddy.homelessness.Helpmeactivity">
        android:weightSum="1"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Your community wants to help you find shelter and life&apos;s necessities.  Please tell us more about your situation so we can help you meet your needs."
            android:id="@+id/textView5"
            android:textColor="#000000"
            android:paddingBottom="10dp"
            android:textSize="19dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please Complete this Form :"
            android:textSize="25dp"
            android:paddingBottom="10dp"
            android:textColor="#176eb7"
            android:textStyle="bold" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint="  Enter Your First Name"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:id="@+id/firstnameid"
            android:background="@drawable/inputform"
            android:layout_weight="0.25"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint="  Enter Your Last Name"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:id="@+id/lastnameid"
            android:background="@drawable/inputform"
            android:layout_weight="0.05"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint="  Enter Your Age"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:id="@+id/ageid"
            android:background="@drawable/inputform"
            android:layout_weight="0.05"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint="  Enter Your Phone Number"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:id="@+id/contactid"
            android:inputType="number"
            android:background="@drawable/inputform"
            android:layout_weight="0.05"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint="  Enter Your Address"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:id="@+id/addressid"
            android:background="@drawable/inputform"
            android:layout_weight="0.05"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Looking For(Check all that apply):"
            android:paddingBottom="10dp"
            android:textSize="17dp"
            android:textColor="#176eb7"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="Shelter"
                android:id="@+id/shelterid"
                android:layout_marginBottom="10dp"
                />
            <CheckBox
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="Clothes"
                android:id="@+id/Clothesid"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="Food"
                android:id="@+id/foodid"
                android:layout_marginBottom="10dp"
                />
            <CheckBox
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="Other"
                android:id="@+id/othersid"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Reason for seeking help(Check all that apply):"
            android:textSize="17dp"
            android:paddingBottom="10dp"
            android:textStyle="bold"
            android:textColor="#176eb7" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="Lost Job"
                android:id="@+id/lostjobid"
                android:layout_marginBottom="10dp"
                />
            <CheckBox
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="Health Issues"
                android:id="@+id/healthissueid"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="Family Issue"
                android:id="@+id/Familyid"
                android:layout_marginBottom="10dp"
                />
            <CheckBox
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="Other Issue"
                android:id="@+id/otherissueid"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description:"
            android:textSize="17dp"
            android:paddingBottom="10dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/noteid"
            android:background="@drawable/inputform"
            android:hint="  Briefly Explain your Current situation(like how risky your situation i!s)"
            android:paddingLeft="10dp"
            android:layout_weight="0.37"
            android:paddingBottom="12dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textSize="20dp"
            android:id="@+id/submitid"
            android:layout_gravity="center"
            android:onClick="submit"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="#176eb7" />

    </LinearLayout>
</ScrollView>
