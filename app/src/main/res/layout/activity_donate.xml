<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.abhilashreddy.homelessness.donate">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context="com.example.abhilashreddy.homelessness.donate">
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Change lives and help the most vulnerable in your community by sharing your resources.  Please post the details here."
            android:id="@+id/textView7"
            android:textColor="#000000"
            android:paddingBottom="10dp"
            android:layout_gravity="right"
            android:textSize="18dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please Complete this Form :"
            android:textSize="25dp"
            android:paddingBottom="10dp"
            android:textColor="#176eb7"
            android:textStyle="bold" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint="  Enter Your First Name"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:id="@+id/firstnameid"
            android:background="@drawable/inputform"
            android:layout_weight="0.25"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint="  Enter Your Last Name"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:id="@+id/lastnameid"
            android:background="@drawable/inputform"
            android:layout_weight="0.05"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint="  Enter Your Phone Number"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:id="@+id/contactid"
            android:inputType="number"
            android:background="@drawable/inputform"
            android:layout_weight="0.05"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint="  Enter Your Address"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:id="@+id/addressid"
            android:background="@drawable/inputform"
            android:layout_weight="0.05"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Resources you want to donate(Check all that apply):"
            android:paddingBottom="10dp"
            android:textSize="20dp"
            android:textColor="#176eb7"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="Shelter"
                android:id="@+id/shelterid"
                android:layout_marginBottom="10dp"
                />
            <CheckBox
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="Clothes"
                android:id="@+id/Clothesid"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="Food"
                android:id="@+id/foodid"
                android:layout_marginBottom="10dp"
                />
            <CheckBox
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="Other"
                android:id="@+id/othersid"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textSize="17dp"
            android:layout_marginBottom="10dp"
            android:textColor="#176eb7"
            android:textStyle="bold" />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <RadioButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/agencyid"
                android:text="Agency/Organization"
                android:checked="false" />
            <RadioButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/individualid"
                android:text="Individual"/>
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description:"
            android:textSize="17dp"
            android:paddingBottom="10dp"
            android:textStyle="bold"
            android:textColor="#176eb7" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/noteid"
            android:background="@drawable/inputform"
            android:paddingLeft="10dp"
            android:hint="Briefly Explain the resources you want to donate and also the availablity of resources.)"
            android:layout_weight="0.37"
            android:paddingBottom="12dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post"
            android:textSize="17dp"
            android:id="@+id/submitids"
            android:layout_gravity="center"
            android:onClick="post"
            android:textColor="#ffffff"
            android:background="#176eb7" />
    </LinearLayout>
</ScrollView>